# version 330 core
# uniform vec3 color;
out vec3 col;

void main(){
    # my_color_location = GL.glGetUniformLocation(self.shader.glid, 'color')
    # GL.glUniform3fv(my_color_location, 1, (0.6, 0.6, 0.9))<

    vec3 p = position;
    col = vec3((p.xy + 1.0)/2.0, 0.0);
    gl.Position = vech(p,1);
}